<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/color_primary</item>
        <item name="colorPrimaryDark">@color/color_primary_dark</item>
        <item name="colorAccent">@color/color_secondary</item>
        <item name="android:textColorPrimaryInverse">@color/color_black</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:colorBackgroundCacheHint">@null</item>
        <item name="android:windowShowWallpaper">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:colorButtonNormal">@color/color_secondary_dark</item>
        <item name="android:statusBarColor">@color/color_primary_dark</item>
        <item name="android:textColorPrimary">@color/color_white</item>
    </style>

    <style name="LauncherTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowShowWallpaper">true</item>
    </style>

    <style name="label_style">
        <item name="android:textSize">@dimen/font_large</item>
        <item name="android:textColor">@color/color_white</item>
    </style>

    <style name="ParamButtonStyle">
        <item name="android:background">@drawable/button_shape</item>
        <item name="android:textColor">@color/color_white</item>
        <item name="android:textSize">@dimen/font_small</item>
        <item name="android:buttonTint">@color/color_white</item>
        <item name="android:layout_width">@dimen/button_width_short</item>
        <item name="android:layout_height">@dimen/button_height_short</item>
        <item name="android:paddingStart">@dimen/spacing_small</item>
        <item name="android:layout_marginBottom">@dimen/spacing_tiny</item>
    </style>

</resources>
